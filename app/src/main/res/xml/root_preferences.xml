<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Подключение">

        <EditTextPreference
            app:key="frontend_url"
            app:title="Адрес витрины магазина"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Печать чека">
        <SwitchPreferenceCompat
            app:key="print_order_number"
            app:title="Номер заказа" />

        <SwitchPreferenceCompat
            app:key="print_internet"
            app:title="Печатать электронные чеки" />

        <SwitchPreferenceCompat
            app:key="print_mark"
            app:title="Код маркировки" />

    </PreferenceCategory>
</PreferenceScreen>
